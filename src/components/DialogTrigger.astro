---
interface Props {
  dialogId: string;
}

const { dialogId } = Astro.props;
---

<button class="trigger" data-open-dialog-id={dialogId}><slot /></button>

<style>
  @import url("/common.css");

  .trigger {
    border: none;
    color: var(--primary);
    background-color: inherit;
    font-size: 1.4rem;
  }
</style>
