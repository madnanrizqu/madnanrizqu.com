---
interface Props {
  dialogId: string;
  ariaLabel?: string;
}

const { dialogId, ariaLabel } = Astro.props;
---

<button
  aria-label={ariaLabel}
  class="trigger group focus:text-secondary hover:text-secondary"
  data-open-dialog-id={dialogId}><slot /></button
>

<style>
  .trigger {
    border: none;
    color: inherit;
    background-color: inherit;
    font-size: 1.4rem;
  }
</style>
