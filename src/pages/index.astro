---
import Layout from "../layouts/Layout.astro";
---

<Layout title="M Adnan Rizqullah, Software Engineer" variant="navbar-only">
  <main
    class="relative h-screen pt-[5.4rem] cmn_container flex md:items-center"
  >
    <div
      class="md:relative md:bottom-[92px] flex flex-col md:flex-row md:items-center md:justify-between gap-6"
    >
      <div
        class="flex justify-center md:order-2 size-96 md:flex-1 md:w-full md:h-full"
      >
        <img
          class="h-full aspect-square rounded-full object-cover object-top grayscale"
          alt="Picture of Adnan smiling"
          srcset="/images/hero_mobile.png 500w, /images/hero.png 1000w"
          sizes="(max-width: 600px) 480px, 1000px"
        />
      </div>
      <div class="text-start flex flex-col gap-6 flex-1">
        <h1 class="text-4xl md:text-5xl">Hi! I'm Adnan</h1>
        <span
          class="block text-7xl [@media(min-height:800px)_and_(min-width:400px)]:text-[5.5rem] [@media(min-height:800px)_and_(min-width:500px)]:text-8xl font-bold"
        >
          I don't just develop Web Applications. I Engineer them
        </span>
      </div>
    </div>
    <footer class="[@media(min-height:400px)]:absolute bottom-6">
      <div class="flex flex-col w-full gap-4">
        <a href="/#portfolio_target" class="cmn_button--outline"
          >View portfolio</a
        >
        <a
          href="/blog"
          class="cmn_button--solid_secondary bg-[var(--font-color)] text-[var(--bg-color)]"
          >View engineering case studies</a
        >
      </div>
    </footer>
  </main>
</Layout>
