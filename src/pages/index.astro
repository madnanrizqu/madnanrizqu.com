---
import Layout from "../layouts/Layout.astro";
---

<Layout title="M Adnan Rizqullah - Home" variant="empty">
  <main class="space-y-12 flex flex-col items-center justify-center h-screen text-center mx-auto px-[var(--page-pad-x)] max-w-4xl">
    <div class="mb-8">
      <img
        class="h-w-80 w-80 rounded-full object-cover mx-auto grayscale"
        alt="Picture of Adnan smiling"
        src="/images/hero.png"
      />
    </div>
    <div>
        <h1 class="font-bold text-base mb-4 text-[var(--font-color)]">
          Hello, I'm Adnan a Software Engineer
        </h1>
        <div class="text-lg text-[var(--font-color)]">
          <span
            class="call-to-action-emphasis-text block text-7xl"
            data-text="I don't just develop Web Applications"
          >
            I don't just develop Web Applications. I Engineer them
          </span>
        </div>
    </div>
    <div class="flex flex-col sm:flex-row sm:justify-center gap-4">
        <a
          href="/me"
          class="inline-block border border-primary text-primary rounded-[0.6rem] py-[0.8rem] px-[1.2rem] text-[1.6rem] font-medium hover:bg-primary hover:text-white focus:outline-none focus:ring-2 focus:ring-primary focus:ring-opacity-50 transition-colors duration-200"
        >
          View portfolio
        </a>
        <a
          href="/blog"
          class="inline-block border border-primary text-primary rounded-[0.6rem] py-[0.8rem] px-[1.2rem] text-[1.6rem] font-medium hover:bg-primary hover:text-white focus:outline-none focus:ring-2 focus:ring-primary focus:ring-opacity-50 transition-colors duration-200"
        >
          View engineering case studies
        </a>
    </div>
  </main>
</Layout>

<style>
  .call-to-action-emphasis-text {
    position: relative;
    /* display: block; is handled by Tailwind 'block' class */
    font-weight: var(--font-bold);
    background: linear-gradient(
      to right,
      var(--secondary) 28%,
      var(--primary) 100%
    );
    -webkit-background-clip: text;
    background-clip: text;
    -webkit-text-fill-color: transparent;
    color: transparent; /* Fallback for text-fill-color */
  }

  .call-to-action-emphasis-text::after {
    content: attr(data-text); /* Uses the text from the data-text attribute */
    position: absolute;
    top: 0;
    bottom: 0;
    left: 0;
    right: 0;
    width: 100%;
    z-index: -1; /* Places the glow behind the main text */
    opacity: 0.4;
    transform: scale(1.04);
    filter: blur(2rem) contrast(200%); /* From CallToActionHeadline.astro */
    background-image: linear-gradient(
      90deg, /* Equivalent to 'to right' */
      var(--secondary) 0%,
      var(--primary) 100%
    );
    -webkit-background-clip: text;
    background-clip: text;
    -webkit-text-fill-color: transparent;
    color: transparent; /* Fallback for text-fill-color */
  }
</style>
