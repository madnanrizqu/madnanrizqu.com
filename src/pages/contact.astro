---
import Layout from "../layouts/Layout.astro";

import ContactForm from "../components/ContactForm";
---

<Layout
  seo={{
    title: "Contact",
    description:
      "Get in touch with Muhammad Adnan R. for web development projects, collaborations, or any inquiries. Fill out the contact form or reach out via social media.",
    openGraph: {
      basic: {
        title: "Contact | Muhammad Adnan R.",
        type: "website",
      },
      optional: {
        siteName: "Muhammad Adnan R. Personal portfolio and blog",
        locale: "en_US",
      },
    },
    twitter: {
      title: "Contact | Muhammad Adnan R.",
      card: "summary_large_image",
      creator: "@madnanrizqu",
      site: "@madnanrizqu",
      description:
        "Get in touch with Muhammad Adnan R. for web development projects, collaborations, or any inquiries. Fill out the contact form or reach out via social media.",
    },
  }}
  variant="top-padding"
>
  <main>
    <section class="contact cmn_container">
      <h1 class="contact__headline">Let's Talk</h1>
      <p>
        Are you looking for someone to solve your
        <span class="contact__emphasis">web development needs</span> ? Let's discuss
        more!
      </p>
      <p>Please fill in this form</p>

      <div class="contact__content">
        <ContactForm client:idle />

        <aside class="contact__alternative">
          <span>You can also contact me through my social medias</span>

          <ul class="contract__social_media_list">
            <li>
              <div class="contact__social_media">
                <div class="contact__social_media_img_container">
                  <img
                    src="/images/linkedin.svg"
                    alt="linkedin logo"
                    height="24"
                    width="24"
                  />
                </div>
                <a
                  href="https://www.linkedin.com/in/madnanrizqu"
                  target="_blank"
                  rel="noopener">Linkdein</a
                >
              </div>
            </li>
            <li>
              <div class="contact__social_media">
                <div class="contact__social_media_img_container">
                  <img
                    src="/images/email.svg"
                    alt="Email icon"
                    height="24"
                    width="24"
                  />
                </div>
                <a href="mailto:madnanrizqullah@gmail.com">Email</a>
              </div>
            </li>
          </ul>
        </aside>
      </div>
    </section>
  </main>
</Layout>

<style>
  /* CONTACT SECTION */
  .contact {
    display: flex;
    flex-direction: column;
    gap: 2.4rem;
    padding-bottom: 12rem;
  }

  .contact__headline {
    color: var(--primary);
  }

  .contact__emphasis {
    color: var(--secondary);
    font-weight: var(--font-bold);
  }

  .contact__content {
    display: flex;
    flex-direction: column;
    gap: 6.4rem;
  }
  @media screen and (min-width: 650px) {
    .contact__content {
      flex-direction: row;
    }
  }

  .contract__social_media_list {
    display: flex;
    flex-direction: column;
    gap: 2.4rem;
  }

  .contact__social_media {
    display: flex;
    gap: 1rem;
    align-items: center;
  }

  .contact__alternative {
    display: flex;
    flex-direction: column;
    gap: 2.4rem;
    flex: 0;
    flex-basis: 24rem;
  }

  .contact__social_media_img_container {
    width: 4.8rem;
    height: 4.8rem;
    display: flex;
    justify-content: center;
    align-items: center;
    border-radius: 100%;
    background-color: var(--secondary);
    text-align: center;
  }
</style>
